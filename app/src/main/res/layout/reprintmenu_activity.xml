<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/back"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:textColor="#FFF"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPRINT MENU"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />



    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@drawable/splash_bg"
        android:orientation="vertical">






        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48sp"
            android:layout_margin="10sp">

            <Button
                android:id="@+id/last_receipt"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:background="@drawable/all_corner_edittext_bg"
                android:text="LAST RECEIPT"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48sp"
            android:layout_margin="10sp">

            <Button
                android:id="@+id/any_receipt"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:background="@drawable/all_corner_edittext_bg"
                android:text="ANY RECEIPT"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48sp"
            android:layout_margin="10sp">

            <Button
                android:id="@+id/settings_logout"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:background="@drawable/all_corner_edittext_bg"
                android:text="LAST SETTLEMENT"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48sp"
            android:layout_margin="10sp">

            <Button
                android:id="@+id/detail_report"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:background="@drawable/all_corner_edittext_bg"
                android:text="DETAIL REPORTS"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48sp"
            android:layout_margin="10sp">

            <Button
                android:id="@+id/last_error"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:background="@drawable/all_corner_edittext_bg"
                android:text="LAST ERROR"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>


    </LinearLayout>
</LinearLayout>