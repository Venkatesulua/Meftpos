<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_bg">


    <RelativeLayout
        android:id="@+id/relativr_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/back"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:textColor="#FFF"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSACTION SUCCESSFUL"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />



    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/relativr_layout"
        android:background="@drawable/line_bg"
        android:id="@+id/imageView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true">






        <TextView
            android:id="@+id/MerDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want share?"
            android:textColor="#000"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textSize="15dp"
            android:lines="5"
            android:maxLines="5"
            android:layout_marginBottom="0dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/ContentDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ddfsdsdsds "
            android:textColor="#000"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textSize="15dp"
            android:lines="18"
            android:maxLines="18"
            android:layout_marginTop="0dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/FooterDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asd "
            android:textColor="#000"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textSize="15dp"
            android:layout_marginBottom="0dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
           >


            <Button
                android:id="@+id/sharebtn"
                android:layout_width="110dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/all_corner_edittext_bg"
                android:text="Share Transaction"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/customercopy"
                android:layout_marginLeft="120dp"
                android:layout_width="110dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/all_corner_edittext_bg"
                android:text="Customer Copy"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/complete"
                android:layout_marginLeft="240dp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/all_corner_edittext_bg"
                android:text="Home Screen"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>




    </LinearLayout>
</ScrollView>