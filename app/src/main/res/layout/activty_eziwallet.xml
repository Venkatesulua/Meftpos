<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    android:background="@drawable/splash_bg">


    <RelativeLayout
        android:id="@+id/relativr_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/eziwallet_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/back"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
             android:textColor="#FFF"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMOUNT"
             android:textColor="#FFF"
            android:textStyle="bold"
            android:drawablePadding="5dp"
             android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
             />



    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/relativr_layout"
        android:background="@drawable/line_bg"
        android:id="@+id/imageView" />

    <ScrollView
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="Order No :"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/eziwallet_orderno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.4"
                android:background="@drawable/all_corner_saleedittext_bg"
                 android:inputType="numberDecimal"
                android:padding="10dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="Store ID  :"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/eziwallet_storeid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.4"
                android:background="@drawable/all_corner_saleedittext_bg"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:singleLine="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="Merchant ID : "
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/eziwallet_merchantid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.4"
                android:background="@drawable/all_corner_saleedittext_bg"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:singleLine="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="Amount :"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/eziwallet_payAmount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.4"
                android:background="@drawable/all_corner_saleedittext_bg"
                android:hint="$0.00"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                 android:gravity="left"
                android:text="Description :"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/eziwallet_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                 android:background="@drawable/all_corner_saleedittext_bg"
                 android:padding="10dp"
                 />
        </LinearLayout>

    <Button
        android:id="@+id/eziwallet_submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/all_corner_button_bg"
        android:text="Submit"
        android:textColor="#FFF" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>